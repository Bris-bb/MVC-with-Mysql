    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Login failed. Check your login details.");

            //<form class="login-form" action="/Users/Login" method="post">
        <h3 class="form-title">Login to your account</h3>
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span> Enter any username and password. </span>
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @placeholder = "Username", @class = "form-control placeholder-no-fix" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                @Html.EditorFor(model => model.pwd, new { htmlAttributes = new { @type = "password", @placeholder = "Password", @class = "form-control placeholder-no-fix" } })
            </div>
        </div>
        <div class="form-actions" style="height: 52px;">
            <button type="submit" class="btn green pull-right"> Login </button>
        </div>
        @*<p>
            <a href="/Users/Create" id="register-btn"> Create an account </a>
        </p>*@
            //</form>
        }
    <!-- END LOGIN FORM -->
     
    </div>
